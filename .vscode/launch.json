{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Jest: current file (client)",
        "cwd": "${workspaceFolder}/packages/client",
        "runtimeExecutable": "node",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "args": [
          "--runInBand",
          "--config",
          "${workspaceFolder}/packages/client/jest.config.js",
          "${file}"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
            "K8S_API": "http://127.0.0.1:8001" 
        }
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach: Node 9229",
        "port": 9229
      }
    ]
}