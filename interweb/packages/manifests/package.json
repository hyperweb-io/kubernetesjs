{
  "name": "@interweb/manifests",
  "version": "0.0.1",
  "description": "Kubernetes manifests for interweb operators",
  "main": "./index.js",
  "types": "./index.d.ts",
  "module": "./esm/index.js",
  "publishConfig": {
    "access": "restricted",
    "directory": "dist"
  },
  "scripts": {
    "copy": "cpy ../../LICENSE README.md package.json dist --flat",
    "clean": "rimraf dist",
    "prepare": "pnpm run build",
    "build": "pnpm run clean && tsc && tsc -p tsconfig.esm.json && pnpm run copy",
    "pull": "ts-node scripts/pull-manifests.ts",
    "pull:all": "ts-node scripts/pull-manifests.ts --all",
    "test": "jest",
    "test:watch": "jest --watch",
    "tests:unit": "jest --selectProjects unit",
    "codegen": "ts-node scripts/codegen-operators.ts"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "@interweb/interwebjs": "workspace:*"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@babel/generator": "^7.25.0",
    "@babel/types": "^7.25.0",
    "@types/babel__generator": "^7.6.8"
  }
}