{
  "name": "@interweb/manifests",
  "version": "0.0.1",
  "description": "Kubernetes manifests for interweb operators",
  "main": "./index.js",
  "types": "./index.d.ts",
  "module": "./esm/index.js",
  "publishConfig": {
    "access": "restricted",
    "directory": "dist"
  },
  "scripts": {
    "copy": "cpy ../../LICENSE README.md package.json dist --flat",
    "copy:operators": "cpy src/operators/* dist/operators --flat",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "build": "npm run clean; tsc; tsc -p tsconfig.esm.json; npm run copy; npm run copy:operators",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5"
  }
}
