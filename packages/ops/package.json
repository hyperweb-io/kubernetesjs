{
  "name": "@kubernetesjs/ops",
  "version": "0.0.2",
  "description": "KubernetesJS Ops library",
  "main": "./index.js",
  "types": "./index.d.ts",
  "module": "./esm/index.js",
  "publishConfig": {
    "access": "restricted",
    "directory": "dist"
  },
  "scripts": {
    "copy": "copyfiles -f ../../LICENSE README.md package.json dist",
    "clean": "rimraf dist",
    "prepare": "pnpm run build",
    "build": "pnpm run clean && tsc && tsc -p tsconfig.esm.json && pnpm run copy",
    "test": "jest",
    "test:watch": "jest --watch",
    "codegen": "ts-node ./scripts/codegen.ts",
    "openapi:fetch": "ts-node ./scripts/fetch-swagger.ts --out ./scripts/swagger.json"
  },
  "devDependencies": {
    "schema-sdk": "^0.15.0"
  }
}
